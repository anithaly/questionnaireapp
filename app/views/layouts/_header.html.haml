%header
  %div.navbar
    %div.navbar-inner
      %div.container{:style => "width:auto;"}
        %a.brand Ankiety
        %ul.nav
          %li= link_to "Strona główna", root_path
          %li= link_to "Dostępne ankiety", questionnaires_path
          %li= link_to "Szukaj", search_path
        %ul.nav.pull-right
          - if user_signed_in?
            %li= link_to('Moje ankiety', user_questionnaires_path(current_user))  
            %li= link_to('Edycja konta', edit_user_path(current_user))    
            %li= link_to('Wyloguj się', destroy_user_session_path, :method=>'delete')
          - else
            %li= link_to('Zaloguj się', new_user_session_path)   
            %li= link_to('Rejestracja', new_user_registration_path)